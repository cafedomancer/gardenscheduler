<div class="nested-fields">
  <%= f.hidden_field :user_id %>
  <div class='row mb-3'>
    <div class='col-3'>
      <%= f.date_field :date, { class: 'form-control', required: true} %>
    </div>
    <div class='col-3'>
      <%= f.select :name, TASK_NAME,
            { include_blank: '作業項目'}, { class: 'form-select' , required: true } %>
    </div>
    <div class='col-5'>
      <%= f.text_field :plan_memo, class: 'form-control', placeholder: 'メモ' %>
    </div>
    <div class='col-1 pt-2'>
      <%= link_to_remove_association f, class: '' do %>
        <i class="far fa-trash-alt"></i>削除
      <% end %>
    </div>
  </div>
</div>
