<p id="notice"><%= notice %></p>

<p>
  <strong><%= Schedule.human_attribute_name(:variety_id) %>:</strong>
  <%= @schedule.variety.name %>
</p>

<p>
  <strong><%= Schedule.human_attribute_name(:name) %>:</strong>
  <%= @schedule.name %>
</p>

<p>
  <strong><%= Schedule.human_attribute_name(:user_id) %>:</strong>
  <%= @schedule.user.name %>
</p>

<p>
  <strong><%= Schedule.human_attribute_name(:prefecture_id) %>:</strong>
  <%= @schedule.prefecture&.name %>
</p>

<% @schedule.tasks.each do | task | %>
  <p>id: <%= link_to task.id, edit_task_path(task) %> | name: <%= task.name %> | date: <%= task.date %> | plan_memo: <%= task.plan_memo %> | done_memo: <%= task.done_memo %> | done_at: <%= task.done_at %></p>
<% end %>

<%= link_to 'Edit', edit_schedule_path(@schedule) %> |
<%= link_to 'Back', schedules_path %>
<p class="card-text"><%= link_to 'Destroy', @schedule, method: :delete, data: { confirm: 'Are you sure?' } %></p>
